{
  "name": "fwe-lernplattform",
  "description": "This is the package.json file in root allow to run both frontend and backend with one cammand from the root",
  "scripts": {
    "start": "concurrently \"npm run start:backend\" \"npm run start:frontend\"",
    "start:backend": "cd backend && npm install && npm run build && npm start",
    "start:frontend": "cd frontend && npm install && npm run dev",
    "test": "jest",
    "test:unit": "jest tests/unit",
    "test:integration": "jest tests/integration",
    "test:coverage": "jest --coverage",
    "lint": "eslint --ext .ts src/",
    "lint:report": "eslint --ext .ts src/ -f json -o eslint-report.json || true"
  },
  "devDependencies": {
    "@types/cors": "^2.8.18",
    "@types/express": "^5.0.2",
    "@types/passport": "^1.0.17",
    "@types/passport-facebook": "^3.0.3",
    "@types/passport-google-oauth20": "^2.0.16",
    "concurrently": "^9.1.2"
  },
  "dependencies": {
    "@google-cloud/local-auth": "^3.0.1",
    "apple-signin-auth": "^2.0.0",
    "google-auth-library": "^10.1.0",
    "googleapis": "^150.0.1",
    "passport": "^0.7.0",
    "passport-apple": "^2.0.2",
    "passport-facebook": "^3.0.0",
    "passport-google-oauth20": "^2.0.0"
  }
}
